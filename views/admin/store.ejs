                  <div class="col-12">
                    <table>
                      <thead>
                        <tr>
                          <th >Serial Number</th>
                          <th >Shop Name</th>
                          <th >Owner Name</th>
                          <th >Pincode</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(let i=0;i < rejected.length;i++) { %>
                          <tr>
                            <th><%= (i+1) %></th>
                            <td><%= rejected[i].name %></td>
