<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/favicon_io/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="assets/favicon_io/favicon-16x16.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="assets/favicon_io/favicon-32x32.png"
    />
    <link rel="manifest" href="assets/favicon_io/site.webmanifest" />
    <link rel="stylesheet" href="style.css" />
    <title>Payment</title>
    <style>
      .container {
        width: 768px;
      }

      #payment_selector {
        width: 144px;
      }

      .col-form-label {
        width: 160px;
        font-weight: 500;
      }

      .city {
        justify-content: flex-end;
      }

      .city .col-form-label {
        width: 70px;
        font-weight: 500;
      }

      .table-outline {
        box-shadow: rgb(0 0 0 / 15%) 0px 4px 4px -2px;
      }

      .table {
        box-shadow: 0 0 2px rgb(0 0 0 / 12%);
      }
    </style>
    <script
      src="https://kit.fontawesome.com/4d8145f93f.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!-- Hamburger menu -->
    <div class="container my-2">
      <div class="row city mb-3">
        <label for="payment_selector" class="col-sm-2 col-form-label"
          >City</label
        >
        <select
          class="form-select"
          aria-label="Select Payment Type"
          id="payment_selector"
        >
          <option selected value="pending">Mandi</option>
          <option value="completed">Chandigarh</option>
        </select>
      </div>
      <div class="row heading">
        <label for="payment_selector" class="col-sm-2 col-form-label"
          >Type of Shop</label
        >
        <select
          class="form-select"
          aria-label="Select Payment Type"
          id="payment_selector"
        >
          <option selected value="pending">Pending</option>
          <option value="completed">All</option>
        </select>
      </div>
      <div class="row">
        <!-- Search Bar -->
      </div>
      <div class="row content mt-4 py-1">
        <div class="pending_table">
          <div class="table-outline">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">S.No.</th>
                  <th scope="col">Shop Name</th>
                  <th scope="col">Details</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0;i<stores.length;i++) {%>
                  <tr>
                  <th scope="row"><%=(i+1)%></th>
                  <td><%= stores[i].storeName%></td>
                  <td><a href="/admin/moneyPayment?currentStore=<%=stores[i]._id%>">View Details</a></td>
                  </tr>
                <% } %> 
                <!-- <tr>
                  <th scope="row">1</th>
                  <td>Radha Communications</td>
                  <td>Electronics</td>
                  <td><a href="admin_payment.html">View Details</a></td>
                </tr>
                <tr>
                  <th scope="row">2</th>
                  <td>Rajendra Kirana</td>
                  <td>Grocery</td>
                  <td><a href="admin_payment.html">View Details</a></td>
                </tr>
                <tr>
                  <th scope="row">3</th>
                  <td>Shyam Enterprises</td>
                  <td>Men's Wear</td>
                  <td><a href="admin_payment.html">View Details</a></td>
                </tr> -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
