<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/favicon_io/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="assets/favicon_io/favicon-16x16.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="assets/favicon_io/favicon-32x32.png"
    />
    <link rel="manifest" href="assets/favicon_io/site.webmanifest" />
    <link rel="stylesheet" href="style.css" />
    <title>Payment</title>
    <style>
      .container {
        width: 768px;
      }

      #payment_selector {
        width: 144px;
      }

      .col-form-label {
        width: 160px;
        font-weight: 500;
      }

      .table-outline {
        box-shadow: rgb(0 0 0 / 15%) 0px 4px 4px -2px;
      }

      .table {
        box-shadow: 0 0 2px rgb(0 0 0 / 12%);
      }

      .paymentSS {
        width: 300px;
      }

      #viewModal .modal-dialog {
        max-width: 900px;
      }

      #viewModal .modal-body .col-9 {
        min-height: 200px;
      }

      .payment_screenshot {
        height: 200px;
        width: 200px;
      }
    </style>
    <script
      src="https://kit.fontawesome.com/4d8145f93f.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!-- Hamburger menu with back link on right side-->
    <div class="container my-2">
      <div class="row heading">
        <label for="payment_selector" class="col-sm-2 col-form-label"
          >Type of Payments</label
        >
        <select
          class="form-select"
          aria-label="Select Payment Type"
          id="payment_selector"
        >
          <option selected value="pending">Pending</option>
          <option value="completed">Completed</option>
        </select>
      </div>
      <div class="row content mt-4 py-1">
        <div class="pending_table">
          <div class="table-outline">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">S.No.</th>
                  <th scope="col">Product Details</th>
                  <th scope="col">Date</th>
                  <th scope="col">MRP</th>
                  <th scope="col">C.P.</th>
                  <th scope="col">S.P.</th>
                  <th scope="col">quantity</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0;i < pendingMoneyDetails.length; i++) {%>
                <tr>
                  <th scope="row"><%=(i+1)%></th>
                  <td><%=pendingMoneyDetails[i].productName%></td>
                  <td>
                    <%= pendingMoneyDetails[i].orderTime.getDate() + '/' +
                    pendingMoneyDetails[i].orderTime.getMonth()+ '/'+
                    pendingMoneyDetails[i].orderTime.getFullYear()%>
                  </td>
                  <td><%= pendingMoneyDetails[i].mrp%></td>
                  <td><%= pendingMoneyDetails[i].costPrice%></td>
                  <td><%= pendingMoneyDetails[i].salePrice%></td>
                  <td><%= pendingMoneyDetails[i].quantity%></td>
                </tr>
                <% } %>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="row" colspan="3">Total</th>
                  <th><%=mrpTotal%></th>
                  <th><%=unPaidAmount%></th>
                  <th><%=totalSales%></th>
                </tr>
              </tfoot>
            </table>
          </div>
          <div class="mt-4 py-1">
            <button
              class="btn btn-outline-primary d-inline-block"
              data-bs-toggle="modal"
              data-bs-target="#payModal"
            >
              Click Here
            </button>
            <span class="fs-5 d-inline-block ms-2"
              >To complete the above payment
            </span>
          </div>
        </div>
        <div class="completed_table d-none">
          <div class="table-outline">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">S.No.</th>
                  <th scope="col">Payment No.</th>
                  <th scope="col">Payment Date</th>
                  <th scope="col">Details</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < payments.length; i++) {%>
                <tr>
                  <th scope="row"><%=(i+1)%></th>
                  <td><%= payments[i].paymentNumber%></td>
                  <td>
                    <%=payments[i].paymentTime.getDate() + '/' +
                    payments[i].paymentTime.getMonth() + '/' +
                    payments[i].paymentTime.getFullYear()%>
                  </td>
                  <td>
                    <a
                      href=""
                      class="modalButton"
                      data-bs-toggle="modal"
                      data-bs-target="#viewModal"
                      data-number="<%=i%>"
                      data-payment="<%=paymentsJSON%>"
                      >View Details</a
                    >
                  </td>
                </tr>
                <% } %>
                <tr>
                  <th scope="row">2</th>
                  <td>Payment 9</td>
                  <td>06/06/2022</td>
                  <td>
                    <a
                      class="modalButton"
                      href=""
                      data-bs-toggle="modal"
                      data-bs-target="#viewModal"
                      data-number="<%=0%>"
                      >View Details</a
                    >
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal for completing payment -->
    <div
      class="modal fade"
      id="payModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="payModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Complete Payment</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form
            action="/admin/moneyDetailStatusChange"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="modal-body">
              <span class="lead"
                >Amount to pay :
                <span class="fw-bolder"><%=unPaidAmount%></span></span
              >
              <input type="hidden" name="amount" value="<%=unPaidAmount%>" />
              <input
                type="hidden"
                id="hiddenMoneyDetails"
                name="moneyDetails"
                value="<%=pendingMoneyDetailsJSON%>"
              />
              <div class="mt-4 mb-3">
                <label for="formFile" class="col-form-label d-inline-block"
                  >Upload Screenshot</label
                >
                <input
                  class="form-control paymentSS d-inline-block"
                  name="image"
                  type="file"
                  id="formFile"
                  required="true"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Modal for viewing details -->
    <div
      class="modal fade"
      id="viewModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="viewModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Details</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-9">
                <div class="table-outline">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">S.No.</th>
                        <th scope="col">Product Details</th>
                        <th scope="col">Date</th>
                        <th scope="col">MRP</th>
                        <th scope="col">C.P.</th>
                        <th scope="col">S.P.</th>
                        <th scope="col">Quantity</th>
                      </tr>
                    </thead>
                    <tbody id="tableBody">
                      <tr>
                        <th scope="row">2</th>
                        <td>Charger</td>
                        <td>03/06/2022</td>
                        <td>149</td>
                        <td>72</td>
                        <td>99</td>
                        <td>2</td>
                      </tr>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th scope="row" colspan="3">Total</th>
                        <th id="totalMRP"></th>
                        <th id="totalCP"></th>
                        <th id="totalSP"></th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
              <div class="col-3">
                <img
                  id="paymentProof"
                  src="https://media.istockphoto.com/vectors/realistic-paper-shop-receipt-vector-cashier-bill-on-white-background-vector-id889405434"
                  alt="paymentSS"
                  class="payment_screenshot"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript">
    console.log("just for fun javascript");
    const pending_text = document.querySelector(".pending_table");
    const completed_text = document.querySelector(".completed_table");
    const modalButtons = document.getElementsByClassName("modalButton");
    const tableBody = document.getElementById("tableBody");
    const hiddenMoneyDetails = document.getElementById("hiddenMoneyDetails");
    if (modalButtons.length > 0) {
      Array.prototype.forEach.call(modalButtons, async function (modalButton) {
        modalButton.addEventListener("click", async function (e) {
          const num = parseInt(modalButton.dataset.number);
          console.log(num);
          const payments = await JSON.parse(modalButton.dataset.payment);

          const totalMRP = document.getElementById("totalMRP");
          totalMRP.innerHTML = payments[num].mrp;
          const totalCP = document.getElementById("totalMRP");
          totalCP.innerHTML = payments[num].costPrice;
          const totalSP = document.getElementById("totalMRP");
          totalSP.innerHTML = payments[num].salePrice;
          console.log(payments[num]);
          for (let i = 0; i < payments[num].moneyDetailsData.length; i++) {
            const tr = document.createElement("tr");

            const rowNumber = document.createElement("th");
            const rowNumberData = document.createTextNode(i + 1);
            rowNumber.append(rowNumberData);
            tr.append(rowNumber);

            const productName = document.createElement("td");
            const productData = document.createTextNode(
              payments[num].moneyDetailsData[i].productName
            );
            productName.append(productData);
            tr.append(productName);

            const orderTime = document.createElement("td");
            const orderTimeData = document.createTextNode(
              payments[num].moneyDetailsData[i].orderTime
            );
            orderTime.append(orderTimeData);
            tr.append(orderTime);

            const mrp = document.createElement("td");
            const mrpData = document.createTextNode(
              payments[num].moneyDetailsData[i].mrp
            );
            mrp.append(mrpData);
            tr.append(mrp);

            const costPrice = document.createElement("td");
            const costPriceData = document.createTextNode(
              payments[num].moneyDetailsData[i].costPrice
            );
            costPrice.append(costPriceData);
            tr.append(costPrice);

            const salePrice = document.createElement("td");
            const salePriceData = document.createTextNode(
              payments[num].moneyDetailsData[i].salePrice
            );
            salePrice.append(salePriceData);
            tr.append(salePrice);

            const quantity = document.createElement("td");
            const quantityData = document.createTextNode(
              payments[num].moneyDetailsData[i].quantity
            );
            quantity.append(quantityData);
            tr.append(quantity);

            tableBody.append(tr);
          }
        });
      });
    }

    const select_menu = document.querySelector("#payment_selector");
    select_menu.addEventListener("change", () => {
      pending_text.classList.toggle("d-none");
      completed_text.classList.toggle("d-none");
    });
  </script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
    integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
    crossorigin="anonymous"
  ></script>
</html>
