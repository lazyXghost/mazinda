<%- include('partials/loginHeader')%>
  <div class="sub-main">
    <div class="login-image">
      <img src="images/log.png" class="login-photo" alt="login-img">
    </div>
    <div class="content">
      <form action="/login" class="sign-in-form" method="POST">
        <div class="title">
          <h1>HELLO! WELCOME BACKðŸ‘‹</h1>
        </div>
        <div class="input-field">
          <i class="fa-solid fa-phone"></i>
          <input type="number" name="phoneNumber" required placeholder="Phone Number" />
        </div>
        <div class="input-field">
          <i class="fa-solid fa-lock"></i>
          <input type="password" name="password" required placeholder="Password" />
        </div>
        <div class="home-login-btn">
          <input type="submit" value="Log In" class="login-b" />
        </div>
        <div class="guest">
          <input type="submit" value="Continue as Guest" class="continue-as-guest-btn">
        </div>
        <div id="login-others">
          <span>or</span>
          <span>Log In with</span>
          <div id="fonts">
            <div id="facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </div>
            <div id="google">
              <i class="fa-brands fa-google"></i>
            </div>
            <div id="apple">
              <i class="fa-brands fa-apple"></i>
            </div>
          </div>
          <div class="no-account">
            <span>Don't have an account?</span>
            <span><a href="/register">Sign Up</a></span>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%- include('partials/loginFooter')%>