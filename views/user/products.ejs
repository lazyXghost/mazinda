<%- include('partials/header') %>
<div  id="main" >
    <div class="categories pt-1 flex flex-col">
                <div class="flex overflow-x-scroll hide-scroll-bar">
                <div class="mt-3 flex flex-nowrap lg:mx-40 md:mx-20 mx-10 ">

                    <% for(let i=0;i < categories.length;i++) {%>
                        <div class="inline-block px-3 category">
                        <a href="/products?ID=<%=categories[i]._id%>" style="color:black; text-decoration:none;">
                            <div style="border-radius: 100%; height: 70px; width: 70px;" class="img">
                                <img style="border-radius: 100%;  object-fit: cover; height: 100%; width: 100%;"  src="/user_UI/img/categories/<%=categories[i].categoryName %>.png" alt="image not present">
                            </div>
                            <p class="text-center" style="width: 70px; font-size: 14px;"><%= categories[i].categoryName%></p>
                            </div>
                        </a>
                        <% }%> 
                </div>
                </div>
    </div>



    <div style="background-color: rgb(255, 255, 255);" class="products text-black p-2">
            <div class="row no-gutters" data-product-container>
                <% for(let i=0;i<products.length;i++) {%>
                <div class="col-6">
                    <div class="product-box" data-product-box>
                        <div class="p-col-inner">
                            <div class="p-data">
                                <div class="card border-0">
                                    <img src="store_UI/img/<%=products[i].images[0]%>" alt="...">
                                    <div class="p-body">
                                        <br>
                                        <h6 class="text-muted p-name productName"><%=products[i].name%></h6>
                                        <input type="hidden" class="productDescription" value="<%=products[i].description%>">
                                        <!-- rating -->
                                        <p class="lead mb-1">
                                        <span class="sp">₹<%=products[i].salePrice%></span>
                                        <span class="ms-2 text-muted cp">₹<%=products[i].mrp%></span>
                                        <span class="ms-2 text-success dis">(<%= parseInt((products[i].mrp - products[i].salePrice)/products[i].mrp * 100) %>% off)</span>
                                    </p>
                                    <!-- Mazinda tick -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
    </div>
</div>
<%- include('partials/footer')%>

