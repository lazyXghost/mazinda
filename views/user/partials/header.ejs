  <body class="font-sans leading-normal tracking-normal mt-12">
    <!-- Optimizing mobile view, will work on desktop view at later stage -->
    <header>
      <!--Nav-->
      <nav
        style="background-color: orange"
        aria-label="menu nav"
        class="pt-2 pb-1 mt-0 h-auto fixed w-full z-20 top-0"
      >
        <div class="flex items-center pb-1 justify-center mx-1 px-1">
          <div  class="flex ml-1 flex-grow  text-white logoDiv">
            <img src="user_UI/img/logos/mazindalong.png" width="70px" alt="">
          </div>

          <select class="block appearance-none bg-gray-200 border border-gray-200 text-gray-700 p-1 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-state" onchange="changeCity(this)">
            <option value="<%=city %>"><%=city%></option>
            <% for(let i=0;i<cities.length;i++) {%> 
              <%if(cities[i] == city) continue %> 
            <option value="<%=cities[i]%>"><%=cities[i]%></option>
            <%}%>
          </select>


          <div class="navRightDiv d-flex ml-1">
            <div
              id="register"
              class="d-flex content-center justify-center ml-1"
            >
              <% if(user && user.userType=="user" ) {%>
              <a href="/profile" style="padding: 2px 4px!important;" class="btn btn-primary">
                <span><i class="fas fa-user-check"></i></span>
              </a>
              <%} else {%>
              <a href="/login" style="padding: 2px 4px!important;" class="btn btn-primary">Log In</a>
              <%}%>
            </div>
          </div>
        </div>
    
        <div class="divider w-100"></div>
        <div class="flex items-center justify-center mx-1 px-1 text-white mb-1">
          <div
            class="flex pb-2 ml-1 flex-shrink md:w-1/3 md:justify-start text-white showHideDiv"
          >
            <a href="#" id="showHide" aria-label="Home" class="ml-1">
              <span class="text-xl text-blue-600"
                ><i class="fa-solid fa-bars"></i
              ></span>
            </a>
          </div>
          <span class="relative w-full mx-1">
            <form action="/products" method="GET">
              
              <input
                aria-label="search"
                type="search"
                id="search"
                name="search"
                placeholder="Search for Products"
                class="w-full bg-gray-900 text-white transition border border-transparent focus:outline-none focus:border-gray-400 rounded py-1.5 pl-10 appearance-none leading-normal" data-search
              />
              <input type="hidden" name="city" value="<%=city%>">
              <button
                type="submit"
                class="absolute search-icon"
                style="top: 0.7rem; left: 0.8rem"
              >
                <svg
                  class="fill-current pointer-events-none text-white w-4 h-4"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"
                  ></path>
                </svg>
              </button>
            </form>
          </span>
          <div class="cartIcon  d-flex">
            <% if(user && user.userType=="user" ) {%>
            <a href="/viewCart" class="btn btn-primary"
              ><i class="fa-solid fa-cart-shopping"></i>
              <%=cartItems%>
            </a>
            <%} else {%>
            <a href="/login" class="btn btn-primary"
              ><i class="fa-solid fa-cart-shopping"></i
            ></a>
            <%}%>
          </div>
        </div>
      </nav>
