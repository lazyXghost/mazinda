    <script>

      function increment() {
        var x = document.getElementById('demoInput').value;
        x++;
        document.getElementById('demoInput').value = x;

      }

      function decrement() {
        var x = document.getElementById('demoInput').value;
        if (x != 0) { x--; }

        document.getElementById('demoInput').value = x;
      }
      function price() {
        var p = 5999;
        var x = parseInt(document.getElementById('demoInput').value);

        document.getElementById('price').innerHTML = '&#x20b9;' + p * x;
        var disc = 1000;
        document.getElementById('discount').innerHTML = '&#x20b9;' + disc * x;
        var del = 49;
        document.getElementById('total').innerHTML = '&#x20b9;' + (p - disc + del) * x;


      }
    </script>
