        <button class="toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="menu"
            aria-expanded="false" aria-label="Toggle navigation">
            <div class="animated-icon">
                <svg id="icon" viewBox="0 0 800 600">
                    <path d="M300,220 C300,220 520,220 540,220 C740,220 640,540 520,420 C440,340 300,200 300,200"
                        id="top">
                    </path>
                    <path d="M300,320 L540,320" id="middle"></path>
                    <path d="M300,210 C300,210 520,210 540,210 C740,210 640,530 520,410 C440,330 300,190 300,190"
                        id="bottom" transform="translate(480, 320) scale(1, -1) translate(-480, -318) "></path>
                </svg>
            </div>
        </button>

        <div class="collapse" id="menu">
            <ul class="me-auto mb-2 mb-lg-0 list-group list-group-flush">
                <li class="list-group-item">
                    <a href="" class="" aria-current="page" href="#"><i class="fas fa-sitemap"></i> Categories</a>
                </li>
                <li class="list-group-item">
                    <a href="/viewOrders" class="" aria-current="page" href="#"><i class="fas fa-shopping-bag"></i> Your Orders</a>
                </li>
                <li class="list-group-item">
                    <a href="/viewCart" class="" aria-current="page" href="#"><i class="fas fa-shopping-cart"></i> Cart</a>
                </li>
                <li class="list-group-item">
                    <a href="/settings" class="" aria-current="page" href="#"><i class="fas fa-user-cog"></i> Settings</a>
                </li>
                <li class="list-group-item">
                    <a href="/contact" class="" aria-current="page" href="#"><i class="fas fa-headset"></i> Contact Us</a>
                </li>
        </div>
    </div>

    <!-- hamburger ends here -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <select class="form-select form-select-lg mb-3" id="addressForm" aria-label=".form-select-lg example">
              <% for(let i=0;i<addresses.length;i++) {%>
                <option value="<%=addresses[i]._id%>"><%=addresses[i].building%>/<%=addresses[i].street%>, <%=addresses[i].locality%> (<%=addresses[i].pincode%>)</option>
              <% } %>
            </select>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" id="address-change" class="btn btn-primary" data-dismiss="modal">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- End Modal content -->

    <!-- Desktop View -->

    <div class="header"></div>
    <% if(length==0) { %>
    <div class="card-body cart">
      <div class="col-sm-12 empty-cart-cls text-center">
        <img
          src="https://i.imgur.com/dCdflKN.png"
          width="130"
          height="130"
          class="img-fluid mb-4 mr-3"
        />
        <h3><strong>Your Cart is Empty</strong></h3>
        <h4>Add something to make me happy :)</h4>
        <a
          href="/"
          class="btn btn-primary cart-btn-transform m-3"
          data-abc="true"
          >continue shopping</a
        >
      </div>
    </div>
    <% } else { %>
    <div class="container cart my-2">
      <div class="product">
        <div class="desc">
          <div class="location">
            <div class="cart-text">
              <div class="cart-text-inner">
                <div class="container p-0">
                  <span class="cart-qty"
                    >My Cart
                    </span
                  >
                </div>
              </div>
            </div>
            <div class="deliver_to">
              <div class="deliver_container">
                <% if(addresses.length == 0) {%>
                <div class="change_container">
                  <a href="/addAddress" type="button" class="btn change_btn">Add Address</a> 
                  <div id="invalid-feedback">Please, Add an address to place order!</div>
                </div>
                <%} else {%>
                <div class="div_text">
                  <span class="deliver_text1">Deliver to : </span>
                  <span class="user_location"
                    ><%=addresses[0].building%>/<%=addresses[0].street%>, <%=addresses[0].locality%> (<%=addresses[0].pincode%>)</span
                  >
                </div>
                <div class="change_container">
                  <button type="button" class="btn change_btn" data-toggle="modal" data-target="#exampleModalCenter">
                    Change Address
                  </button>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <div class="products">
            <% for(let i=0;i < products.length;i++) {%>
            <div class="products_tab">
              <div class="product_info">
                <a href="http://">
                  <!-- Product Page Linked by Image -->
                  <div class="product_img-div">
                    <img
                      src="data:images/image/png;base64,<%=products[i].images[0].data.toString('base64')%>"
                      alt=""
                      class="product_img"
                    />
                  </div>
                </a>
                <div class="product_description">
                  <div class="p_title-div">
                    <a href="">
                      <!-- Product Page Linked by Title -->
                      <div class="p_title"><%= products[i].name %></div>
                    </a>
                  </div>
                  <div class="p_qty">
                    <!-- Need to be designed to add/delete -->
                  </div>
                  <div class="p_seller">
                    <span>Seller: <%= products[i].store_id %></span>
                    <span class="ms-2">
                      <!-- Mazinda Assured Logo -->
                    </span>
                  </div>
                  <div class="p_price">
                    <span class="original">₹ <%= products[i].mrp%> </span>
                    <span class="mazinda">₹ <%= products[i].salePrice%> </span>
                    <span class="discount"
                      >₹ <%=
                      Number.parseInt((products[i].mrp-products[i].salePrice)/products[i].mrp
                      * 100) %>% Off</span
                    >
                  </div>
                  <div class="p_actions">
                    <div class="p_save">  Qty: <input class="w-25" type="number" name="Quantity" id="Quantity" value="<%= products[i].availableQuantity %>"  onchange="changeQuantity('<%= products[i]._id %>', this,'<%=user._id%>')"></div>
                    <div class="p_remove"><a href="/removeProduct?product_id=<%=products[i]._id%>&user_id=<%=user._id%>">Remove</a> </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="value">
        <div class="value_container">
          <span class="price">Price Details</span>
          <div class="price_breakup mb-2">
            <div class="price_section">
              <div class="section_title">
                Price (<%=products.length%> items)
              </div>
              <span> ₹<%= amount+discount %></span>
            </div>
            <div class="price_section">
              <div class="section_title">Discount</div>
              <span class="color-2">- ₹<%= discount %></span>
            </div>
            <div class="price_section">
              <div class="section_title">Delivery Charges</div>
              <span class="color-2"> FREE</span>
            </div>
            <div class="price_total">
              <div class="price_section">
                <div class="section_title">Total Amount</div>
                <span id="amount"> ₹<%= amount %></span>
              </div>
            </div>
            <div class="value_final">
              You will save ₹<%= discount %> on this order
            </div>
            <div class="value_final">
              <button id="wallet" class="btn buy_btn">Use <%=Math.min(amount,wallet.coins)%> Mazinda coins</button>
            </div>
          </div>
          <div class="place">
            <% if(addresses.length == 0) {%>
              <button id="noAddress" class="btn buy_btn nonclickable">Proceed to Checkout</button>
              <div id="invalid-feedback">Please Enter Address to place Order</div>
            <% } else {%>
              <form action="/placeOrder" method="post">
                <input type="hidden" value="cart" name="orderType">
                <input id="hiddenAmount" type="hidden" value="<%= amount %>" name="amount">
                <input type="hidden" id="hiddenAddress" value="<%= addresses[0]._id %>" name="address_id"a>
                <input type="hidden" id="hiddenWallet" name="wallet" value="false">
                <button type="submit" class="btn buy_btn">Proceed to Checkout</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <div class="footer"></div>
    
    <script>
        const addressChange = document.getElementById("address-change");
        addressChange.addEventListener("click", () => {
          const addressForm = document.getElementById("addressForm");
          const hiddenAddress = document.getElementById("hiddenAddress");
          const user_location = document.querySelector(".user_location");
          hiddenAddress.value = addressForm.value;
          user_location.innerHTML = addressForm.options[addressForm.selectedIndex].text;
        }); 

        let div = document.querySelector(".animated-icon");
        div.addEventListener('click', () => {
            div.classList.toggle('cross')
        });
        let wallet = document.getElementById("wallet");
        let hiddenAmount = document.getElementById("hiddenAmount");
        let amount = document.getElementById("amount");
        let hiddenWallet = document.getElementById("hiddenWallet");
        let checker = false;
        wallet.addEventListener("click",()=>{
          const walletValue = Math.min(parseInt("<%-amount%>"),parseInt("<%-wallet.coins%>"));
          if(checker) return;
          checker = true;
          hiddenWallet.value = "true";
          hiddenAmount.value = String(parseInt(hiddenAmount.value) - parseInt(walletValue/10));
          amount.innerHTML = String(parseInt(amount.innerHTML.substring(2)) - parseInt(walletValue/10));
          wallet.classList.add("nonclickable");
        })
        const addressButton = document.getElementById("noAddress");
        if(addressButton){
          addressButton.addEventListener('click',()=>{
            const feedback = document.getElementById("invalid-feedback");
            feedback.style.display = 'block';
          });
        }

        function changeQuantity(product_id, field,user_id) {
          var xhr = new XMLHttpRequest();
          var url = `updateCartQuantity/?product_id=${product_id}&newQuantity=${field.value}&user_id=${user_id}`;
          xhr.open("GET", url, (async = true));
          console.log("working...");
          document.getElementById("Quantity").setAttribute("disabled", "true");
          xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
              document.location.reload();
            }
          };
          xhr.send();
        }
    </script>

