    <title>Cart</title>

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        margin: 0px;
        font-size: 14px;
        color: #212121;
        line-height: 1.4;
      }

      .cart {
        display: flex;
        flex-direction: column;
        flex-flow: row;
      }

      .product {
        flex-flow: column;
        display: flex;
        flex-grow: 1;
      }

      .desc {
        box-shadow: rgb(0 0 0 / 20%) 0px 1px 2px 0px;
        display: flex;
        flex-flow: column;
      }

      .location {
        background-color: rgb(255, 255, 255);
        display: flex;
        flex-flow: row;
      }

      .cart-text {
        width: 25%;
        display: flex;
        align-items: center;
        margin: auto;
      }

      .cart-text-inner {
        display: block;
        padding-left: 24px;
      }

      .cart-qty {
        font-size: 18px;
        font-weight: 500;
      }

      .deliver_to {
        display: block;
        width: 75%;
        margin: 5px 10px 0px 0px;
      }

      .deliver_container {
        flex-direction: row;
        padding: 12px 16px;
        background: #fff;
        box-shadow: 0 0 2px rgb(0 0 0 / 12%);
        border-radius: 4px;
        align-items: center;
        display: flex;
      }

      .deliver_text1 {
        color: #111112;
        line-height: 20px;
        margin-right: 5px;
      }

      .user_location {
        color: #111112;
        line-height: 20px;
        font-weight: 500;
      }

      .change_container {
        display: flex;
        flex-direction: column;
        flex: 1;
        align-items: flex-end;
      }

      .change_btn {
        border: 1px solid #e0e0e0;
        background-color: #fff;
        border-radius: 4px;
        padding: 10px 16px;
        color: #2874f0;
        cursor: pointer;
        font-weight: 500;
      }

      .value {
        display: flex;
        flex-flow: column;
        padding: 0px 0px 0px 16px;
        position: sticky;
        bottom: 0;
        top: 0px;
        z-index: 2;
        align-self: flex-start;
        width: 33.33%;
      }

      .value_container {
        position: relative;
        width: 100%;
        display: inline-block;
        vertical-align: top;
        background: #fff;
        border-radius: 2px;
        min-height: 47px;
        box-shadow: 0 1px 1px 0 rgb(0 0 0 / 20%);
      }

      .price {
        display: block;
        text-transform: uppercase;
        padding: 13px 24px;
        font-weight: 500;
        color: #878787;
        min-height: 47px;
        border-radius: 2px 2px 0 0;
        border-bottom: 1px solid #f0f0f0;
        font-size: 16px;
      }

      .price_breakup {
        padding: 0 24px;
        border-bottom: 1px solid #f0f0f0;
        font-size: 16px;
      }

      .price_section {
        display: flex;
        justify-content: space-between;
        margin: 20px 0;
        align-items: flex-start;
      }

      .section_title {
        max-width: 68%;
        display: block;
      }

      .color-2 {
        color: #388e3c;
      }

      .price_total {
        border-top: 1px dashed #e0e0e0;
        border-bottom: 1px dashed #e0e0e0;
        font-weight: 500;
        font-size: 18px;
      }

      .value_final {
        padding: 12px 0;
        font-size: 16px;
        display: flex;
        justify-content: space-between;
        border-radius: 2px;
        color: #388e3c;
        font-weight: 500;
      }

      .place {
        border-top: 1px solid #f0f0f0;
        background: #fff;
        padding: 12px 20px;
        box-shadow: 0 -2px 10px 0 rgb(0 0 0 / 10%);
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .buy_btn {
        background: #fb641b;
        box-shadow: 0 2px 5px 0 rgb(213 217 217 / 50%);
        border: none;
        color: #fff;
        border-radius: 8px;
        width: auto;
        padding: 10px 20px;
        min-width: 250px;
        text-transform: uppercase;
        font-size: 16px;
        font-weight: 500;
      }

      .buy_btn:hover {
        color: #fff;
      }

      .products {
        width: 100%;
      }

      .products_tab {
        border-top: 1px solid #f0f0f0;
        padding: 24px;
        box-shadow: 0 1px 1px 0 rgb(0 0 0 / 20%);
        background: #fff;
        max-width: 950px;
      }

      .product_info {
        display: flex;
      }

      .product_img-div {
        width: 128px;
        height: 128px;
        position: relative;
        margin: 0 auto;
      }

      .product_img {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        top: 0;
        margin: auto;
        max-width: 100%;
        max-height: 100%;
      }

      .product_description {
        padding: 0 24px 12px;
        vertical-align: top;
        min-height: 128px;
        flex: 1 1;
        max-width: 460px;
      }

      .p_title-div,
      .p_title-div a {
        display: block;
        white-space: nowrap;
        height: 20px;
        text-decoration: none;
        border: none;
        outline: none;
      }

      .p_title {
        font-size: 18px;
        color: #212121;
        line-height: 1;
        display: inline;
      }

      .p_qty,
      .p_seller {
        display: block;
        color: #878787;
        font-size: 16px;
        height: 20px;
      }

      .p_seller,
      .p_price {
        margin-top: 8px;
      }

      span.original {
        color: #878787;
        text-decoration: line-through;
        font-size: 16px;
        margin-right: 8px;
      }

      span.mazinda {
        font-size: 18px;
        font-weight: 500;
        color: #212121;
        margin-right: 5px;
      }

      span.discount {
        font-size: 16px;
        margin-right: 10px;
        font-weight: 500;
        color: #388e3c;
      }

      .p_actions {
        display: inline-block;
        padding-top: 10px;
      }

      .p_save,
      .p_remove {
        display: inline-block;
        text-transform: uppercase;
        box-shadow: none;
        outline: 0;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        margin-right: 15px;
      }

      .p_save:hover,
      .p_remove:hover {
        color: #2874f0;
      }

      @import url(http://fonts.googleapis.com/css?family=Calibri:400,300,700);

      body {
        font-family: "Calibri", sans-serif !important;
      }

      .mt-100 {
        margin-top: 100px;
      }

      .card {
        margin-bottom: 30px;
        border: 0;
        -webkit-transition: all 0.3s ease;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        border-radius: 8px;
        -webkit-box-shadow: 1px 5px 24px 0 rgba(68, 102, 242, 0.05);
        box-shadow: 1px 5px 24px 0 rgba(68, 102, 242, 0.05);
      }

      .card .card-header {
        background-color: #fff;
        border-bottom: none;
        padding: 24px;
        border-bottom: 1px solid #f6f7fb;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
      }

      .card-header:first-child {
        border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;
      }

      .card .card-body {
        padding: 30px;
        background-color: transparent;
      }

      .btn-primary,
      .btn-primary.disabled,
      .btn-primary:disabled {
        background-color: #4466f2 !important;
        border-color: #4466f2 !important;
      }

      .toggler {
        background: #3498db;
        color: white;
        line-height: 40px;
        border-radius: 100%;
        width: 40px;
        height: 40px;
        border: none;
    }

    .collapse {
        max-width: 160px;
        margin: 12px 20px;
    }

    .list-group-item a {
        text-decoration: none;
        color: inherit;
        font-size: 18px;
        font-weight: 400;
    }

    .list-group-item a i {
        margin-right: 8px;
    }

    .menu-container {
        padding: 8px;
    }

    .animated-icon {
        margin: 0;
        padding: 0;
        text-align: center;
        display: flex;
        align-items: center;
    }

    #icon {
        cursor: pointer;
        transform: translate3d(0, 0, 0);
    }

    path#top,
    path#bottom {
        stroke-dasharray: 240px 950px;
    }

    path#middle {
        stroke-dasharray: 240px 240px;
    }

    path {
        fill: none;
        transition: stroke-dashoffset 0.5s cubic-bezier(0.25, -0.25, 0.75, 1.25), stroke-dasharray 0.5s cubic-bezier(0.25, -0.25, 0.75, 1.25);
        stroke-width: 40px;
        stroke-linecap: round;
        stroke: #fff;
        stroke-dashoffset: 0px;
    }

    .cross path#top,
    .cross path#bottom {
        stroke-dashoffset: -650px;
    }

    .cross path#middle {
        stroke-dashoffset: -115px;
        stroke-dasharray: 1px 220px;
    }

    #invalid-feedback{
      display: none;
      color: red;
      font-size: 20px;
    }

    .nonclickable{
      background-color: grey;
    }
    </style>

    <script
      src="https://kit.fontawesome.com/4d8145f93f.js"
      crossorigin="anonymous"
    ></script>
