<title>Register</title>
<%- include('partials/registerHeader')%>

<div id="sub-main">
  <img src="\user_UI\img\logos\mazindalong.png" alt="..." />
  <div id="content">
    <form action="/register" method="POST" class="sign-in-form">
      <h2 class="title">Create an account</h2>
      <div id="con-span">
        <span>Create and verify an account to get connected </span>
        <span>with us</span>
        <%- locals.global_message  %>
      </div>
      <div class="input-field">
        <i class="fas fa-user"></i>
        <input type="text" name="name" value="<%= (locals.form) ? form.nameHolder:'' %>"  placeholder="Full Name" />
      </div>
      <label for=""><%= (locals.message.name) ? locals.message.name.msg:'' %></label>
      <div class="input-field">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email"   value="<%= (locals.form) ? form.emailHolder:'' %>" placeholder="Email Address" />
      </div>
      <label for=""><%= (message.email) ? message.email.msg:'' %></label>
      <div class="input-field">
        <i class="fas fa-phone"></i>
        <input
          type="text"
          name="phoneNumber"
           
          placeholder="Phone Number"
          value="<%= (locals.form) ? form.mobileHolder:'' %>"
        />
      </div>
      <label for=""><%= (message.phoneNumber) ? locals.message.phoneNumber.msg:'' %></label>
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <input
          type="password"
          name="password"
           
          placeholder="Enter Password"
          value="<%= (locals.form) ? form.passwordHolder:'' %>"
        />
      </div>
      <label for=""><%= (message.password) ? locals.message.password.msg:'' %></label>
     
      <div id="conditions">
        <span>By creating an account you are agreeing to our</span>
        <span
          ><a href="T&C">terms and conditions</a> &
          <a href="pp">privacy policy</a></span
        >
      </div>
      <button type="submit" class="btn Sign" value="Sign-up">Sign Up</button>
      <button type="button" class="btn" value="guest">
        <a id="remove-effects" href="/">Continue as Guest</a>
      </button>
      <div id="login-others">
        <span>or</span>
        <span class="last_span">Sign Up with</span>
        <div id="fonts">
          <div id="facebook">
            <i class="fa-brands fa-facebook-f"></i>
          </div>
          <div id="google">
            <i class="fa-brands fa-google"></i>
          </div>
          <div id="apple">
            <i class="fa-brands fa-apple"></i>
          </div>
        </div>
      </div>
      <span class="last_span"
        >Already have an account? <a href="/login">Log In</a>
      </span>
    </form>
  </div>
</div>
<%- include('partials/registerFooter')%>
