<%- include('partials/registerHeader') %>

  <body>
    <div id="main">
      <div id="sub-main">
        <img src="/user_UI/img/logos/mazindalong.png">
        <div id="content">
          <form action="/register" method="POST" class="sign-in-form">
            <h2 class="title">Creat an account</h2>
            <div id="con-span">
              <span>Creat and verify an account to get connected </span>
              <span>with us</span>
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="name" required placeholder="First Name" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="name" required placeholder="Last Name" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" required placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-phone"></i>
              <input type="number" name="phoneNumber" required placeholder="Phone Number" />
            </div>
            <div class="input-field">
              <span> </span>
              <input type="text" name="referralCode" placeholder="Enter OTP" />
            </div>
            <div id="conditions">
              <span>By creating an account you are aggreing to our</span>
              <span><a href="T&C">terms and conditions</a> & <a href="pp">privacy policy</a></span>
            </div>
            <button type="submit" class="btn Sign" value="Sign-up">Sign Up</button>
            <button type="submit" class="btn" value="guest">Continue as Guest</button>
            <div id="login-others">
              <span>or</span>
              <span class="last_span">Sign Up with</span>
              <div id="fonts">
                <div id="facebook">
                  <i class="fa-brands fa-facebook-f"></i>
                </div>
                <div id="google">
                  <i class="fa-brands fa-google"></i>
                </div>
                <div id="apple">
                  <i class="fa-brands fa-apple"></i>
                </div>
              </div>
            </div>
            <span class="last_span">Already have an account? <a href="l/ogin">Log In</a> </span>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/registerFooter') %>